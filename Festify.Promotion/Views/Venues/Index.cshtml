@model IEnumerable<Festify.Promotion.Venues.VenueInfo>

@{
    ViewData["Title"] = "Venues";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VenueGuid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VenueGuid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VenueGuid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
